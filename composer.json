{
    "name": "setono/job-status-bundle",
    "description": "A Symfony bundle that abstracts the progress of async jobs",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": ">=7.4",
        "doctrine/doctrine-bundle": "^1.12 || ^2.3",
        "doctrine/orm": "^2.7",
        "doctrine/persistence": "^1.3 || ^2.0",
        "eventsauce/backoff": "^1.1",
        "happyr/doctrine-specification": "^2.0",
        "setono/doctrine-object-manager-trait": "^1.0",
        "stof/doctrine-extensions-bundle": "^1.6",
        "symfony/config": "^5.4 || ^6.0",
        "symfony/console": "^5.4 || ^6.0",
        "symfony/dependency-injection": "^5.4 || ^6.0",
        "symfony/event-dispatcher": "^5.4 || ^6.0",
        "symfony/event-dispatcher-contracts": "^1.1 || ^2.4",
        "symfony/http-foundation": "^5.4 || ^6.0",
        "symfony/http-kernel": "^5.4 || ^6.0",
        "symfony/validator": "^5.4 || ^6.0",
        "symfony/workflow": "^5.4 || ^6.0",
        "twig/twig": "^2.14 || ^3.3",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "doctrine/data-fixtures": "^1.5",
        "infection/infection": "^0.26",
        "matthiasnoback/symfony-dependency-injection-test": "^4.3",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1 || ^0.18.0",
        "psalm/plugin-symfony": "^3.0",
        "roave/security-advisories": "dev-latest",
        "setono/code-quality-pack": "^2.1",
        "symfony/css-selector": "^5.4 || ^6.0",
        "symfony/dom-crawler": "^5.4 || ^6.0",
        "symfony/serializer-pack": "^1.0",
        "symfony/twig-bundle": "^5.4 || ^6.0"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\JobStatusBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\JobStatusBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "unused": [
            "stof/doctrine-extensions-bundle"
        ]
    },
    "scripts": {
        "analyse": "psalm",
        "check-style": "ecs check",
        "fix-style": "ecs check --fix",
        "phpunit": "phpunit"
    }
}
